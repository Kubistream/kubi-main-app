# Shared database connection for local development (.env)
DATABASE_URL="postgresql://kubi:kubi@localhost:5432/kubi?schema=public"

# Public NEXT key (safe to expose) (.env.local)
NEXT_PUBLIC_WALLET_CONNECT_PROJECT_ID="your_wallet_connect_project_id"

# Session configuration (32+ characters) (.env)
SESSION_SECRET="replace-with-a-random-long-secret-string"

# Domains used for SIWE message validation
# (.env)
APP_URL="http://localhost:3000" 
# (.env.local)
NEXT_PUBLIC_APP_URL="http://localhost:3000"
# Pusher credentials (overlay realtime)
PUSHER_APP_ID="your_app_id"
PUSHER_KEY="your_key"
PUSHER_SECRET="your_secret"
PUSHER_CLUSTER="ap1"
NEXT_PUBLIC_PUSHER_KEY="your_key"
