# =============================================================================
# Database
# =============================================================================
DATABASE_URL=postgresql://user:password@host:5432/database

# =============================================================================
# Next.js
# =============================================================================
NEXT_PUBLIC_APP_URL=http://localhost:3000

# =============================================================================
# S3 / MinIO (for media uploads)
# =============================================================================
AWS_ACCESS_KEY_ID=minioadmin
AWS_SECRET_ACCESS_KEY=minioadmin
AWS_REGION=us-east-1
S3_BUCKET_NAME=kubi-media
S3_ENDPOINT=http://localhost:9000

# =============================================================================
# Ponder Indexer - Multichain RPC URLs
# =============================================================================
# Base Sepolia (Chain ID: 84532)
PONDER_RPC_URL_84532=https://base-sepolia.g.alchemy.com/v2/YOUR_KEY

# Mantle Sepolia (Chain ID: 5003)
PONDER_RPC_URL_5003=https://rpc.sepolia.mantle.xyz

# =============================================================================
# Pusher (overlay realtime)
# =============================================================================
PUSHER_APP_ID=your_app_id
PUSHER_KEY=your_key
PUSHER_SECRET=your_secret
PUSHER_CLUSTER=ap1
NEXT_PUBLIC_PUSHER_KEY=your_key
NEXT_PUBLIC_PUSHER_CLUSTER=ap1

# =============================================================================
# Faucet (for testing)
# =============================================================================
FAUCET_PRIVATE_KEY=0xYOUR_PRIVATE_KEY

# =============================================================================
# Rebase Scheduler (Yield Token Rebase)
# =============================================================================
# RPC URL for the chain where yield tokens are deployed
RPC_URL=https://rpc.sepolia.mantle.xyz
# Private key of the owner account (with 0x prefix)
PRIVATE_KEY=0xYOUR_PRIVATE_KEY_HERE
# Chain ID (e.g., 5003 for Mantle Sepolia)
CHAIN_ID=5003
# Cron expression for scheduler (default: every 30 minutes)
# Format: seconds minutes hours day month weekday
CRON_EXPR=0 */30 * * * *
